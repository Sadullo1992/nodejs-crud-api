{
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "module": "node16",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "allowJs": true,
    "importHelpers": true
  },
  "include": ["src/**/*"],
  "exclude": ["./node_modules", "./dist", "./tests"]
}
